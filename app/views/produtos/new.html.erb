<%= form_for Produto.new do |f|%>
  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%=f.label :nome %>
        <%=f.text_field :nome, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%=f.label :descricao %>
        <%=f.text_area :descricao, class:"form-control" , rows: 4%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <div class="form-group">
        <%=f.label :preco %>
        <%=f.number_field :preco, step: 0.01, class:"form-control" %>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="form-group">
        <%=f.label :quantidade %>
        <%=f.number_field :quantidade, class:"form-control" %>
      </div>
    </div>
  </div>
  <%=f.submit "Criar", class: "btn btn-primary"%>
<%end%>

